@model dynamic

@{
	ViewBag.Title = "LogIn";
}

<h2>LogIn</h2>

@if (ViewData["Message"] != null) {
	<div style="border: solid 1px red">@ViewData["Message"]</div>
}
	<p>You must log in before entering the Members Area: </p>

@using (Html.BeginForm("Authenticate", "Account", new { ReturnURL = HttpUtility.UrlEncode(Request.QueryString["ReturnUrl"]) }, FormMethod.Post)) { 
	<label for="openid_identifier">OpenID: </label>
	<input autofocus="true" id="openid_identifier" name="openid_identifier" value="https://test.caes.ucdavis.edu/openid/" size="40" />
	<input type="submit" value="Login" />
}